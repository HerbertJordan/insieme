
let int = int<4>;

let C = struct {
	int sum;
};

let Ctor = C::() {
	this->sum = 0;
};

let add = C::(int x)->unit {
	this->sum = this->sum + x;
};

let getSum = C::()->int {
	return *this->sum;
};

unit main() {

	// create a new object instance
	ref<C> c;	
	
	// call constructor
	Ctor(c);	
	
	// work with the object
	print("%d\n", c.getSum());
	print("%d\n", c.add(3));
	print("%d\n", c.getSum());
	
}
