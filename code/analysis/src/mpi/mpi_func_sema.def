	ACCESS(USE, RANGE(0,1)),														// Type info
	NO_REF,																			// Receiver rank
	NO_REF,																			// Tag
	ACCESS(USE, RANGE(0,1)),														// Communicator
	ACCESS(DEF, RANGE(DISPL(ARG(6)), PLUS(DISPL(ARG(6)), 1)))						// Status information 
);

