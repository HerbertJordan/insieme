//~~~~~~~~~~~~~~~~~~~~~~~~
// MPI_Waitall function
//~~~~~~~~~~~~~~~~~~~~~~~~
FUNC(MPI_Waitall, 
	"(int<4>,ref<array<ref<array<ompi_request_t,1>>,1>>,ref<array<struct<MPI_SOURCE:int<4>,"
	"MPI_TAG:int<4>,MPI_ERROR:int<4>,_cancelled:int<4>,_ucount:uint<8>>,1>>)->int<4>",
