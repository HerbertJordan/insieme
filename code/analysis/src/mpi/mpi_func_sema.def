//~~~~~~~~~~~~~~~~~~~~~~~~
// MPI_Send function
//~~~~~~~~~~~~~~~~~~~~~~~~
FUNC(MPI_Send,
	 "(anyRef,int<4>,ref<array<ompi_datatype_t,1>>,int<4>,int<4>,ref<array<ompi_communicator_t,1>>)->int<4>", 
	 false,																			// side effects? 
	 ACCESS(USE, RANGE(DISPL(ARG(0)),PLUS(DISPL(ARG(0)), TO_FORMULA(ARG(1))))), 	// Sent data
	 NO_REF,																		// Size of sent data
	 ACCESS(USE, RANGE(0,1)),														// Type info
	 NO_REF,																		// Destination rank
	 NO_REF,																		// Tag
	 ACCESS(USE, RANGE(0,1))														// Communicator 
);

//~~~~~~~~~~~~~~~~~~~~~~~~
// MPI_Isend function
//~~~~~~~~~~~~~~~~~~~~~~~~
FUNC(MPI_Isend,
	 "(anyRef,int<4>,ref<array<ompi_datatype_t,1>>,int<4>,int<4>,ref<array<ompi_communicator_t,1>>,"
	 "ref<array<ref<array<ompi_request_t,1>>,1>>)->int<4>", 
	 false,																			// side effects? 
	 ACCESS(USE, RANGE(DISPL(ARG(0)),PLUS(DISPL(ARG(0)), TO_FORMULA(ARG(1))))), 	// Sent data
	 NO_REF,																		// Size of sent data
	 ACCESS(USE, RANGE(0,1)),														// Type info
	 NO_REF,																		// Destination rank
	 NO_REF,																		// Tag
	 ACCESS(USE, RANGE(0,1)),														// Communicator 
	 ACCESS(DEF, RANGE(DISPL(ARG(6)), PLUS(DISPL(ARG(6)), 1)))						// Request object
);

//~~~~~~~~~~~~~~~~~~~~~~~~
// MPI_Recv function
//~~~~~~~~~~~~~~~~~~~~~~~~
FUNC(MPI_Recv, 
	"(anyRef,int<4>,ref<array<ompi_datatype_t,1>>,int<4>,int<4>,ref<array<ompi_communicator_t,1>>,"
